generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id      String  @id @default(cuid())
  name    String
  email   String  @unique
  image   String?
  balance Int     @default(5000)
}

model Trade {
  id         Int      @default(autoincrement())
  trade_time DateTime @db.Timestamptz(6)
  symbol     String
  price      Decimal  @db.Decimal(18, 8)
  qty        Decimal  @db.Decimal(18, 8)

  @@id([id, trade_time])
}


