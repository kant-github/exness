generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id      String  @id @default(cuid())
  name    String
  email   String  @unique
  image   String?
  balance Int     @default(5000)
}

model Trade {
  id         Int      @default(autoincrement())
  tradeTime  DateTime @db.Timestamptz(6) @map("trade_time")
  symbol     String   // Added symbol field you're using
  price      Decimal  @db.Decimal(18, 8)
  quantity   Decimal  @db.Decimal(18, 8)
  
  @@id([id, tradeTime])
  @@index([symbol, tradeTime]) // Added index for symbol-based queries
  @@map("Trade")
}